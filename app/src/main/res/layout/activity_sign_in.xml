<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00203F"
    tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/logoSignInImage"
        android:layout_width="339dp"
        android:layout_height="300dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348"
        tools:src="@drawable/run_buddy" />

    <Button
        android:id="@+id/signInAccount"
        android:layout_width="208dp"
        android:layout_height="76dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#ADEFD1"
        android:text="Sign In"
        android:textColor="#00203F"
        android:textSize="24sp"
        app:cornerRadius="9dp"
        app:layout_constraintEnd_toEndOf="@+id/logoSignInImage"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/logoSignInImage"
        app:layout_constraintTop_toBottomOf="@+id/logoSignInImage" />

</androidx.constraintlayout.widget.ConstraintLayout>