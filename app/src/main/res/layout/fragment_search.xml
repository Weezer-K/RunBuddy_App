<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00203F"
    tools:context=".SearchFragment">

    <CheckBox
        android:id="@+id/mile10Box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#ADEFD1"
        android:text="10 miles"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="231dp" />

    <CheckBox
        android:id="@+id/mile1Box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#ADEFD1"
        android:text="1 mile"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="130dp" />

    <CheckBox
        android:id="@+id/mile5Box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#ADEFD1"
        android:text="5 miles"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="183dp" />

    <Button
        android:id="@+id/RSbtn"
        android:layout_width="235dp"
        android:layout_height="67dp"
        android:backgroundTint="#ADEFD1"
        android:text="Public Search"
        android:textColor="#00203F"
        android:textSize="20sp"
        app:cornerRadius="9dp"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="348dp" />

    <Button
        android:id="@+id/SBIbtn"
        android:layout_width="194dp"
        android:layout_height="64dp"
        android:backgroundTint="#ADEFD1"
        android:text="Join by ID"
        android:textColor="#00203F"
        android:textSize="20sp"
        app:cornerRadius="9dp"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="620dp" />

    <EditText
        android:id="@+id/edtRoomID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="Type in room number"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#DDDDDDDD"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="532dp" />

</androidx.constraintlayout.widget.ConstraintLayout>